<h1>Add a New Pledge</h1>

<br> 

<h2><%= link_to "Or Sign up for our mailing list", new_address_path %>  </h2> 


<%= form_for @user do |f| %> 

<% if @user.errors.any? %> 
  <% @user.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger"><%= msg %> </div>
  <% end %> 
<% end %> <br> 

<%= f.label :name %> <br>
<%= f.text_field :name %> <br>

<%= f.label :adderss %> <br>
<%= f.text_field :address %><br> 

<%= f.label :email %> <br>
<%= f.text_field :email %><br>

<%= f.label :password %> <br>
<%= f.password_field :password %><br> 

<%= f.label :password_confirmation %> <br>
<%= f.password_field :password_confirmation %><br> 

<hr> 
<%= f.fields_for(:pledge_attributes) do |p| %> 
  <%= p.label :amount %> <br>
  <%= p.number_field :amount %> <br>

  <%= p.label :frequency %> <br>
  <%= p.select :frequency, options_for_select(["Daily", "Weekly", "Monthly"]) %><br>

  <%= p.label :startdate %> <br>
  <%= p.date_field :startdate %><br>
<% end %>
<br>
<hr> 
<%= f.submit "Submit Pledge" %> 

<hr>
<hr>
<% end %> 